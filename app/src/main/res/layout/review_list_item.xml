<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
     >

    <TextView
        android:id="@+id/tv_content_review"
        style="@style/MovieTextStyle"
        android:ellipsize="end"
        android:maxLines="5"
        android:textStyle="italic"
        tools:text="This movie is amazing! I recommend it!" />

    <TextView
        android:id="@+id/tv_author_name_review"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_content_review"
        android:textColor="@android:color/black"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        tools:text="kahina Mouelouel" />
    <View
        android:layout_width="match_parent"
        style="@style/horizontalLine"
        android:layout_below="@+id/tv_author_name_review"
         />
</RelativeLayout>